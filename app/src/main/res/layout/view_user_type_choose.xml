<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="horizontal"
              android:paddingBottom="15dp"
              android:paddingTop="10dp">

    <Button
        android:id="@+id/btn_type_stage"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_my_stage_selector"
        android:text="@string/my_stage"
        android:textColor="@color/user_choose_color"/>

    <Button
        android:id="@+id/btn_type_moment"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_my_moment_selector"
        android:text="@string/my_moment"
        android:textColor="@color/user_choose_color"/>
</LinearLayout>